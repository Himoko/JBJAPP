<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_item_pic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@mipmap/icon_round" />

    <TextView
        android:id="@+id/tv_item_title"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/iv_item_pic"
        android:text="肯德基服务员（每天结账）"
        android:textSize="21dp" />

    <TextView
        android:id="@+id/tv_item_money"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tv_item_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="5dp"
        android:text="100元/天"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_item_content"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/iv_item_pic"
        android:layout_alignStart="@+id/tv_item_title"
        android:text="长期兼职"
        android:textSize="18dp" />
</RelativeLayout>
